{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(local);Initial Catalog=E-CommerceSystem;Integrated Security=True;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "SecretKey": "MySecretKey@2025MySecretKey@2025MySecretKey@2025", // Replace with a secure key
    "ExpiryInMinutes": 30
  },

  "Jwt": {
    "Key": "SuperSecretKey1234567890!",
    "Issuer": "ECommerceSystem",
    "Audience": "ECommerceSystem",
    "ExpireMinutes": 60,

    "AllowedHosts": "*",


    // You must use a Gmail App Password, not your normal Gmail password.
    // Go to Google Account → Security → 2-Step Verification → App Passwords → Generate new → copy 16-digit password

    "EmailSettings": {
      "SmtpServer": "smtp.gmail.com",
      "Port": 587,
      "SenderName": "ECommerceSystem",
      "SenderEmail": "codeline555@gmail.com",
      "Username": "codeline555@gmail.com",
      "Password": "#########", //-------> we have to add password here
      "UseSsl": true
    },
    "Serilog": {
      "MinimumLevel": "Information",
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "path": "Logs/log-.txt",
            "rollingInterval": "Day"
          }
        }
      ]
    }
  }
